<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.Button.Colored.Rounded" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:textColor">@drawable/button_primary_text_color</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">@dimen/text_style_medium</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="lineHeight">@dimen/line_height_button_primary</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Moneybox.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="FullscreenLoading" parent="AppTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DashboardTextStyle">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/text_style_medium</item>
        <item name="android:textColor">@color/text_label_primary</item>
    </style>

    <style name="InvestmentTextStyle" parent="DashboardTextStyle">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>

</resources>
